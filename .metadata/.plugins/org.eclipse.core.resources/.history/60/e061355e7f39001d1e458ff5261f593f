package pruebas;

import java.util.Scanner;

public class ej1_calcDesc {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		
		byte desc;

		System.out.print("Escribe el precio del producto: ");
		float precio = scan.nextFloat();

		System.out.print("Escribe el descuento a aplicar: ");
		try { desc = (byte) scan.nextByte(); }
		catch (Exception ex) {System.out.print("ERROR");}
		finally {

		scan.close();

		// System.out.print(precio + " " + ((float)desc/100));

		float precioF = precio * (1 - ((float) desc / 100));

		System.out.print("El precio final es de " + ((float)Math.round(precioF * 100) / 100) + "â‚¬."); }

	}

}
